<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textColor="#D6C106"
        android:text="Forestry Commission"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="55dp"
        android:gravity="center_horizontal"
        android:textColor="#D6C106"
        android:text="Forest Services Division"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="89dp"
        android:gravity="center_horizontal"
        android:text="Achimota Park"
        android:textColor="#D6C106"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="475dp"
        android:gravity="center_horizontal"
        android:textColor="#D6C106"
        android:text="Thank You for the visit"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/print"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="520dp"
        android:background="#9C8D05"
        android:onClick="onClickBmp"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:text="Print"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/user">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Date:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Request ID:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Receipt ID:"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/receit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receit"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Customer Name:"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receit"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Number In Group:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="192dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdetail"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdetail"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtquan"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="205dp"
            android:gravity="center_horizontal"
            android:text="Qty"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quan"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtquan"
            android:layout_marginLeft="125dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtrate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="205dp"
            android:gravity="center_horizontal"
            android:text="Rate:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtrate"
            android:layout_marginLeft="220dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtamt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="205dp"
            android:gravity="center_horizontal"
            android:text="Amt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtamt"
            android:layout_marginLeft="300dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtbill"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="280dp"
            android:gravity="center_horizontal"
            android:text="Bill Due:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="280dp"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="280dp"
            android:gravity="center_horizontal"
            android:text="GHC"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>